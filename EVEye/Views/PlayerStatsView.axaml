<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:EVEye.Models"
             xmlns:evEye="clr-namespace:EVEye.Models.EVEye"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EVEye.Views.PlayerStatsView">
    <Design.DataContext>
        <evEye:EVEyePlayerInformation />
    </Design.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Player:" />
            <TextBlock Text="{Binding CharacterName}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Solo Danger Ratio:" />
            <TextBlock Text="{Binding PlayerDetails.SoloDangerRatio}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Danger Ratio:" />
            <TextBlock Text="{Binding PlayerDetails.DangerRatio}" />
        </StackPanel>
    </StackPanel>
</UserControl>