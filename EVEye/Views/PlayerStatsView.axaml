<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:evEye="clr-namespace:EVEye.Models.EVEye"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EVEye.Views.PlayerStatsView">
    <Design.DataContext>
        <evEye:EVEyePlayerInformation />
    </Design.DataContext>
    <StackPanel>
        <HeaderedContentControl Header="{Binding CharacterName, StringFormat='Character Statistics for {0}'}">
            <StackPanel>
                <TextBlock Text="{Binding PlayerDetails.SoloDangerRatio, StringFormat='Solo Danger-Ratio: {0}'}" />
                <TextBlock Text="{Binding PlayerDetails.DangerRatio, StringFormat='Danger-Ratio: {0}'}" />
            </StackPanel>
        </HeaderedContentControl>

        <HeaderedContentControl Header="Killboard Activity (last 200)">
            <StackPanel>
                <TextBlock Text="Avg. Fleet Size: " />
                <TextBlock Text="Last Activity: " />
                <TextBlock Text="Time Ago: " />
                <TextBlock Text="Top three ships: PROBABLY NONO" />
            </StackPanel>


        </HeaderedContentControl>


    </StackPanel>
</UserControl>